# Flag protected subprogram bodies whose protected type has aspect Lock_Free
# when a variable is referenced via an expanded name in this body.

@check(message="possible occurrence of KP VA03-035", impact="22.*")
fun kp_va03_035(node) =
    node is SubpBody
    when node.p_decl_part() is BasicDecl(p_semantic_parent() is
         BasicDecl(p_has_aspect("Lock_Free") is true))
     and (from node select first
          DottedName(p_referenced_decl() is ObjectDecl)) != null
