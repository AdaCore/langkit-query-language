# Flag source code text characters that are not part of the printable ASCII
# character set, a line feed, or a carriage return character (i.e. values 10,
# 13 and 32 .. 126 of the ASCII Character set).

@unit_check(help="non-printable characters", remediation="EASY",
            execution_cost=4)
fun printable_ascii(unit) = [
    {message: "non printable ASCII character", loc: tok}
    for tok in unit.tokens
    if match tok.text
       | "[^\r\n -~]" => true
       | *            => false
]
