fun priority(paramSpec) =
    if paramSpec.f_default_expr != null
    then 0
    else match paramSpec.f_mode
            | ModeOut     => 1
            | ModeInOut   => 2
            | ModeIn      => 3
            | ModeDefault => 3

@check
fun parameters_order(node) =
    node is p @ ParamSpec(any next_siblings
                         is sib @ ParamSpec when priority(sib) > priority(p))
